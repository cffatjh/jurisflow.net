<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JurisFlow</title>
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Google Fonts - Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="sidebar text-white d-flex flex-column" style="width: 280px; min-height: 100vh; position: fixed;">
            <!-- Logo -->
            <div class="p-4">
                <a href="/" class="text-decoration-none d-flex align-items-center">
                    <div class="me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 44px; height: 44px; border-radius: 12px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);">
                        <i class="bi bi-briefcase-fill text-white fs-5"></i>
                    </div>
                    <div>
                        <span class="fs-4 fw-bold text-white">Juris<span style="color: #a78bfa;">Flow</span></span>
                        <div class="text-white-50" style="font-size: 0.7rem; letter-spacing: 0.1em;">HUKUK YÖNETİM</div>
                    </div>
                </a>
            </div>

            <!-- Navigation -->
            <nav class="flex-grow-1 px-2 py-3" style="overflow-y: auto;">
                <!-- Main Section -->
                <div class="px-3 mb-2">
                    <small class="text-uppercase text-white-50" style="font-size: 0.65rem; letter-spacing: 0.15em; font-weight: 700;">Ana Menü</small>
                </div>
                <ul class="nav flex-column mb-4">
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">
                            <i class="bi bi-grid-1x2-fill me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Matters" ? "active" : "")" asp-controller="Matters" asp-action="Index">
                            <i class="bi bi-folder-fill me-2"></i> Davalar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clients" ? "active" : "")" asp-controller="Clients" asp-action="Index">
                            <i class="bi bi-people-fill me-2"></i> Müvekkiller
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")" asp-controller="Tasks" asp-action="Index">
                            <i class="bi bi-check2-square me-2"></i> Görevler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Documents" ? "active" : "")" asp-controller="Documents" asp-action="Index">
                            <i class="bi bi-file-earmark-text-fill me-2"></i> Dokümanlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")" asp-controller="Calendar" asp-action="Index">
                            <i class="bi bi-calendar3 me-2"></i> Takvim
                        </a>
                    </li>
                </ul>

                <!-- Finance Section -->
                <div class="px-3 mb-2">
                    <small class="text-uppercase text-white-50" style="font-size: 0.65rem; letter-spacing: 0.15em; font-weight: 700;">Finans</small>
                </div>
                <ul class="nav flex-column mb-4">
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Billing" ? "active" : "")" asp-controller="Billing" asp-action="Index">
                            <i class="bi bi-credit-card-fill me-2"></i> Faturalar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TimeTracker" ? "active" : "")" asp-controller="TimeTracker" asp-action="Index">
                            <i class="bi bi-stopwatch-fill me-2"></i> Zaman Takibi
                        </a>
                    </li>
                </ul>

                <!-- Tools Section -->
                <div class="px-3 mb-2">
                    <small class="text-uppercase text-white-50" style="font-size: 0.65rem; letter-spacing: 0.15em; font-weight: 700;">Araçlar</small>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CRM" ? "active" : "")" asp-controller="CRM" asp-action="Index">
                            <i class="bi bi-person-lines-fill me-2"></i> CRM
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Communications" ? "active" : "")" asp-controller="Communications" asp-action="Index">
                            <i class="bi bi-chat-dots-fill me-2"></i> İletişim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AIDrafter" ? "active" : "")" asp-controller="AIDrafter" asp-action="Index">
                            <i class="bi bi-stars me-2"></i> AI Asistan
                            <span class="badge bg-gradient-primary ms-auto" style="font-size: 0.6rem;">YENİ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "VideoCall" ? "active" : "")" asp-controller="VideoCall" asp-action="Index">
                            <i class="bi bi-camera-video-fill me-2"></i> Video Görüşme
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- User Section -->
            <div class="p-3 mt-auto" style="background: rgba(0,0,0,0.2); border-top: 1px solid rgba(255,255,255,0.1);">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                        <div class="avatar-circle me-3">
                            @User.FindFirst("Initials")?.Value
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <div class="fw-semibold text-truncate">@User.Identity?.Name</div>
                            <small class="text-white-50" style="font-size: 0.75rem;">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg" style="min-width: 220px;">
                        <li class="px-3 py-2 border-bottom">
                            <small class="text-muted">Hesap</small>
                        </li>
                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="Index"><i class="bi bi-person me-2"></i>Profilim</a></li>
                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="ChangePassword"><i class="bi bi-key me-2"></i>Şifre Değiştir</a></li>
                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="Notifications"><i class="bi bi-bell me-2"></i>Bildirimler</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li class="px-3 py-2 border-bottom">
                                <small class="text-muted">Yönetim</small>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Settings" asp-action="Users"><i class="bi bi-people me-2"></i>Kullanıcılar</a></li>
                            <li><a class="dropdown-item" asp-controller="Settings" asp-action="AuditLogs"><i class="bi bi-journal-text me-2"></i>Denetim Günlükleri</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1" style="margin-left: 280px;">
            <!-- Top Header -->
            <header class="sticky-top px-4 py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <!-- Mobile Menu Toggle -->
                    <button class="btn btn-link d-lg-none p-0 text-dark" onclick="document.querySelector('.sidebar').classList.toggle('show')">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <div>
                        <h4 class="mb-0 fw-bold text-gradient">@ViewData["Title"]</h4>
                        <small class="text-muted">@DateTime.Now.ToString("dddd, d MMMM yyyy")</small>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <!-- Search -->
                    <div class="position-relative d-none d-md-block">
                        <input type="text" class="form-control" placeholder="Ara... (Ctrl+K)" style="width: 250px; padding-left: 2.5rem;">
                        <i class="bi bi-search position-absolute" style="left: 12px; top: 50%; transform: translateY(-50%); color: #94a3b8;"></i>
                    </div>
                    
                    <!-- Notifications -->
                    <button class="btn btn-light position-relative" style="border-radius: 12px;">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                            3
                        </span>
                    </button>
                    
                    <!-- Quick Add -->
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-plus-lg me-1"></i> Yeni
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg">
                            <li><a class="dropdown-item" asp-controller="Matters" asp-action="Create"><i class="bi bi-folder-plus me-2"></i>Yeni Dava</a></li>
                            <li><a class="dropdown-item" asp-controller="Clients" asp-action="Create"><i class="bi bi-person-plus me-2"></i>Yeni Müvekkil</a></li>
                            <li><a class="dropdown-item" asp-controller="Tasks" asp-action="Create"><i class="bi bi-plus-square me-2"></i>Yeni Görev</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Documents" asp-action="Upload"><i class="bi bi-cloud-upload me-2"></i>Dosya Yükle</a></li>
                            <li><a class="dropdown-item" asp-controller="AIDrafter" asp-action="Index"><i class="bi bi-stars me-2"></i>AI ile Belge Oluştur</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
