@model List<JurisFlowASP.Models.Invoice>
@{
    Layout = "~/Views/ClientPortal/_PortalLayout.cshtml";
    ViewData["Title"] = "Faturalar";
}

<div class="row g-4 mb-4">
    @{
        var total = Model.Sum(i => i.Amount);
        var paid = Model.Where(i => i.Status == "Paid").Sum(i => i.Amount);
        var pending = Model.Where(i => i.Status == "Sent" || i.Status == "Overdue").Sum(i => i.Amount);
    }
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h6 class="text-muted">Toplam</h6>
                <h3 class="mb-0">@total.ToString("C0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h6 class="text-white-50">Ödenen</h6>
                <h3 class="mb-0">@paid.ToString("C0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h6 class="text-white-50">Bekleyen</h6>
                <h3 class="mb-0">@pending.ToString("C0")</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Faturalarım (@Model.Count)</h5>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt-cutoff fs-1 text-muted"></i>
                <p class="text-muted mt-2">Henüz fatura bulunmuyor</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Fatura No</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                            <th>Vade Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.OrderByDescending(i => i.DueDate))
                        {
                            var statusClass = invoice.Status switch
                            {
                                "Paid" => "bg-success",
                                "Overdue" => "bg-danger",
                                "Sent" => "bg-warning text-dark",
                                _ => "bg-secondary"
                            };
                            var rowClass = invoice.Status == "Overdue" ? "table-danger" : "";
                            <tr class="@rowClass">
                                <td><strong>@invoice.Number</strong></td>
                                <td>@invoice.Amount.ToString("C0")</td>
                                <td><span class="badge @statusClass">@invoice.Status</span></td>
                                <td>
                                    @invoice.DueDate.ToString("dd MMM yyyy")
                                    @if (invoice.Status == "Overdue")
                                    {
                                        <small class="text-danger ms-1">(@((DateTime.Now - invoice.DueDate).Days) gün gecikmiş)</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
