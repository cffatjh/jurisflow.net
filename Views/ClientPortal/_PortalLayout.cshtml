<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Müvekkil Portalı - JurisFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background: #f8fafc; }
        .portal-sidebar { background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%); min-height: 100vh; }
        .sidebar-link { color: rgba(255,255,255,0.7); padding: 0.75rem 1.25rem; display: block; text-decoration: none; border-radius: 8px; margin: 0.25rem 0.5rem; }
        .sidebar-link:hover, .sidebar-link.active { background: rgba(255,255,255,0.1); color: white; }
        .avatar-circle { width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="portal-sidebar d-flex flex-column" style="width: 260px; position: fixed;">
            <div class="p-3 border-bottom border-secondary">
                <div class="d-flex align-items-center">
                    <i class="bi bi-briefcase-fill text-primary me-2 fs-4"></i>
                    <span class="fs-5 fw-bold text-white">Juris<span class="text-primary">Flow</span></span>
                </div>
                <small class="text-muted">Müvekkil Portalı</small>
            </div>

            <nav class="flex-grow-1 py-3">
                <a href="@Url.Action("Dashboard", "ClientPortal")" class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-grid-1x2 me-2"></i> Dashboard
                </a>
                <a href="@Url.Action("Matters", "ClientPortal")" class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Matters" ? "active" : "")">
                    <i class="bi bi-folder me-2"></i> Davalarım
                </a>
                <a href="@Url.Action("Documents", "ClientPortal")" class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Documents" ? "active" : "")">
                    <i class="bi bi-file-earmark-text me-2"></i> Dokümanlar
                </a>
                <a href="@Url.Action("Invoices", "ClientPortal")" class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Invoices" ? "active" : "")">
                    <i class="bi bi-receipt me-2"></i> Faturalar
                </a>
                <a href="@Url.Action("Messages", "ClientPortal")" class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Messages" ? "active" : "")">
                    <i class="bi bi-chat-dots me-2"></i> Mesajlar
                </a>
            </nav>

            <div class="p-3 border-top border-secondary">
                <div class="d-flex align-items-center mb-2">
                    <div class="avatar-circle bg-primary text-white me-2">
                        @(Context.Session.GetString("ClientName")?.Substring(0, 1).ToUpper() ?? "M")
                    </div>
                    <div class="flex-grow-1 text-white">
                        <div class="fw-semibold text-truncate">@Context.Session.GetString("ClientName")</div>
                        <small class="text-muted">@Context.Session.GetString("ClientEmail")</small>
                    </div>
                </div>
                <form asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                        <i class="bi bi-box-arrow-right me-1"></i> Çıkış
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1" style="margin-left: 260px;">
            <header class="bg-white border-bottom px-4 py-3">
                <h4 class="mb-0 fw-semibold">@ViewData["Title"]</h4>
            </header>
            <div class="p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
