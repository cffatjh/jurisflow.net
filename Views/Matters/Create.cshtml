@model JurisFlowASP.ViewModels.MatterCreateViewModel
@{
    ViewData["Title"] = "Yeni Dava";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card form-modern">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0"><i class="bi bi-folder-plus me-2"></i>Yeni Dava Oluştur</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Dosya Numarası *</label>
                            <input asp-for="CaseNumber" class="form-control" placeholder="2024/001" required>
                            <span asp-validation-for="CaseNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Dava Adı *</label>
                            <input asp-for="Name" class="form-control" placeholder="Dava başlığı" required>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Müvekkil *</label>
                            <select asp-for="ClientId" class="form-select" required>
                                <option value="">Seçin...</option>
                                @foreach (var client in ViewBag.Clients as List<JurisFlowASP.Models.Client>)
                                {
                                    <option value="@client.Id">@client.Name</option>
                                }
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Sorumlu Avukat *</label>
                            <select asp-for="ResponsibleAttorney" class="form-select" required>
                                <option value="">Seçin...</option>
                                @foreach (var user in ViewBag.Users as List<JurisFlowASP.Models.User>)
                                {
                                    <option value="@user.Name">@user.Name (@user.Role)</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Uygulama Alanı</label>
                            <select asp-for="PracticeArea" class="form-select">
                                <option value="Civil Litigation">Hukuk Davası</option>
                                <option value="Criminal Defense">Ceza Davası</option>
                                <option value="Family Law">Aile Hukuku</option>
                                <option value="Corporate">Şirketler Hukuku</option>
                                <option value="Estate Planning">Miras Hukuku</option>
                                <option value="Intellectual Property">Fikri Mülkiyet</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Ücret Yapısı</label>
                            <select asp-for="FeeStructure" class="form-select">
                                <option value="Hourly">Saatlik</option>
                                <option value="Fixed">Sabit</option>
                                <option value="Contingency">Koşullu</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Saatlik Ücret (₺)</label>
                            <input asp-for="BillableRate" type="number" step="0.01" class="form-control" placeholder="0.00">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Trust Bakiyesi (₺)</label>
                            <input asp-for="TrustBalance" type="number" step="0.01" class="form-control" placeholder="0.00">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Durum</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Open">Open</option>
                                <option value="Pending">Pending</option>
                                <option value="Trial">Trial</option>
                                <option value="Closed">Closed</option>
                            </select>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Dava Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
