@model List<JurisFlowASP.ViewModels.MatterListViewModel>
@{
    ViewData["Title"] = "Davalar";
    var statusCounts = new Dictionary<string, int>
    {
        ["Open"] = Model.Count(m => m.Status == "Open"),
        ["Pending"] = Model.Count(m => m.Status == "Pending"),
        ["Trial"] = Model.Count(m => m.Status == "Trial"),
        ["Closed"] = Model.Count(m => m.Status == "Closed")
    };
}

<!-- Stats Row -->
<div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
        <div class="card h-100 border-0" style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(74, 222, 128, 0.1) 100%);">
            <div class="card-body text-center py-3">
                <div class="fs-2 fw-bold text-success">@statusCounts["Open"]</div>
                <small class="text-muted fw-medium">Açık</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 border-0" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(251, 191, 36, 0.1) 100%);">
            <div class="card-body text-center py-3">
                <div class="fs-2 fw-bold text-warning">@statusCounts["Pending"]</div>
                <small class="text-muted fw-medium">Beklemede</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 border-0" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);">
            <div class="card-body text-center py-3">
                <div class="fs-2 fw-bold" style="color: #6366f1;">@statusCounts["Trial"]</div>
                <small class="text-muted fw-medium">Duruşma</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 border-0" style="background: linear-gradient(135deg, rgba(100, 116, 139, 0.1) 0%, rgba(148, 163, 184, 0.1) 100%);">
            <div class="card-body text-center py-3">
                <div class="fs-2 fw-bold text-secondary">@statusCounts["Closed"]</div>
                <small class="text-muted fw-medium">Kapalı</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters & Actions -->
<div class="card mb-4">
    <div class="card-body py-3">
        <div class="row align-items-center g-3">
            <div class="col-lg-6">
                <div class="d-flex flex-wrap gap-2">
                    <!-- Status Filter -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>
                            @(ViewBag.CurrentStatus ?? "Tüm Durumlar")
                        </button>
                        <ul class="dropdown-menu shadow-lg">
                            <li><a class="dropdown-item" asp-action="Index"><i class="bi bi-grid me-2"></i>Tümü</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-route-status="Open"><span class="badge bg-success me-2">●</span>Open</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-route-status="Pending"><span class="badge bg-warning me-2">●</span>Pending</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-route-status="Trial"><span class="badge bg-primary me-2">●</span>Trial</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-route-status="Closed"><span class="badge bg-secondary me-2">●</span>Closed</a></li>
                        </ul>
                    </div>

                    <!-- Search -->
                    <form asp-action="Index" method="get" class="d-flex gap-2 flex-grow-1" style="max-width: 350px;">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                            <input type="text" name="search" class="form-control border-start-0" placeholder="Dava ara..." 
                                   value="@ViewBag.Search">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 text-lg-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Yeni Dava
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Dosya No</th>
                        <th>Dava Adı</th>
                        <th>Müvekkil</th>
                        <th>Uzmanlık Alanı</th>
                        <th>Sorumlu</th>
                        <th>Durum</th>
                        <th>Görevler</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var matter in Model)
                    {
                        <tr>
                            <td>
                                <code class="bg-light px-2 py-1 rounded">@matter.CaseNumber</code>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@matter.Id" class="text-decoration-none fw-semibold">
                                    @matter.Name
                                </a>
                                <div class="text-muted small">@matter.OpenDate.ToString("dd.MM.yyyy")</div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-2" style="width: 32px; height: 32px; font-size: 0.75rem;">
                                        @(matter.ClientName?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <span>@matter.ClientName</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark fw-medium">@matter.PracticeArea</span>
                            </td>
                            <td>@matter.ResponsibleAttorney</td>
                            <td>
                                <span class="badge badge-status badge-@matter.Status.ToLower()">@matter.Status</span>
                            </td>
                            <td>
                                @if (matter.TaskCount > 0)
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary fw-medium">
                                        <i class="bi bi-list-task me-1"></i>@matter.TaskCount
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@matter.Id" class="btn btn-outline-primary" title="Detay">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@matter.Id" class="btn btn-outline-secondary" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body empty-state py-5">
            <i class="bi bi-folder-x empty-state-icon"></i>
            <h5 class="mt-4 mb-2">Henüz dava oluşturulmamış</h5>
            <p class="text-muted mb-4">İlk davanızı oluşturmak için başlayın.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-lg me-1"></i>İlk Davayı Oluştur
            </a>
        </div>
    </div>
}
