@model JurisFlowASP.ViewModels.ClientCreateViewModel
@{
    ViewData["Title"] = "Yeni Müvekkil";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card form-modern">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Yeni Müvekkil Ekle</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Ad Soyad / Firma Adı *</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Ahmet Yılmaz" required>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">E-posta *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" required>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" placeholder="0555 123 45 67">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Şirket Adı</label>
                            <input asp-for="Company" class="form-control" placeholder="(Opsiyonel)">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Tür</label>
                            <select asp-for="Type" class="form-select">
                                <option value="Individual">Bireysel</option>
                                <option value="Corporate">Kurumsal</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Durum</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Aktif</option>
                                <option value="Inactive">Pasif</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Adres</label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="generatePortalAccess" name="generatePortalAccess" value="true">
                                <label class="form-check-label" for="generatePortalAccess">
                                    Portal Erişimi Oluştur (Şifre otomatik oluşturulup e-postalanacak)
                                </label>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
