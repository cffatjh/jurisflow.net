@model IEnumerable<JurisFlowASP.Models.TimeEntry>
@{
    ViewData["Title"] = "Zaman Takibi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-clock-history me-2"></i>Zaman Takibi</h4>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newEntryModal">
        <i class="bi bi-plus-lg me-1"></i>Yeni Giriş
    </button>
</div>

<!-- Stats -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card stat-card bg-primary-subtle">
            <div class="card-body">
                <div class="text-muted small">Bu Ay Toplam Saat</div>
                <div class="fs-4 fw-bold text-primary">@(((double)ViewBag.TotalHours).ToString("N1")) saat</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card bg-success-subtle">
            <div class="card-body">
                <div class="text-muted small">Faturalandırılabilir Tutar</div>
                <div class="fs-4 fw-bold text-success">₺@(((decimal)ViewBag.BillableAmount).ToString("N2"))</div>
            </div>
        </div>
    </div>
     <div class="col-md-4">
        <div class="card stat-card bg-warning-subtle">
            <div class="card-body">
                <div class="text-muted small">Faturalandırılmamış</div>
                <div class="fs-4 fw-bold text-warning">₺@(((decimal)ViewBag.UnbilledAmount).ToString("N2"))</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-modern mb-0">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Müvekkil / Dava</th>
                    <th>Açıklama</th>
                    <th>Süre</th>
                    <th>Tutar</th>
                    <th>Durum</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model)
                {
                    <tr>
                        <td>@entry.Date.ToString("dd.MM.yyyy")</td>
                        <td>
                            <div class="fw-medium">@entry.Matter?.Client?.Name</div>
                            <small class="text-muted">@entry.Matter?.Name</small>
                        </td>
                        <td>@entry.Description</td>
                        <td>@((entry.Duration / 60.0).ToString("N1")) sa</td>
                        <td>₺@((entry.Duration / 60.0m * entry.Rate).ToString("N2"))</td>
                        <td>
                            @if (entry.IsBilled)
                            {
                                <span class="badge bg-success-subtle text-success">Faturalandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning-subtle text-warning">Açık</span>
                            }
                        </td>
                        <td>
                             @if (!entry.IsBilled)
                            {
                                <form asp-action="Delete" asp-route-id="@entry.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-link text-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- New Entry Modal -->
<div class="modal fade" id="newEntryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Zaman Girişi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Dava *</label>
                         <select name="MatterId" class="form-select" required>
                            <option value="">Seçin...</option>
                            @foreach (var matter in ViewBag.Matters as List<JurisFlowASP.Models.Matter>)
                            {
                                <option value="@matter.Id">@matter.Name (@matter.Client?.Name)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tarih</label>
                        <input type="date" name="Date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label">Süre (Dakika)</label>
                            <input type="number" name="Duration" class="form-control" placeholder="60" required>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Saatlik Ücret</label>
                            <input type="number" name="Rate" class="form-control" placeholder="Saatiniz 0 ise dava oranını alır" step="0.01">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="Description" class="form-control" rows="2" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
