@model JurisFlowASP.Models.Document
@{
    ViewData["Title"] = Model.Name;
    var isImage = Model.MimeType.StartsWith("image/");
    var isPdf = Model.MimeType == "application/pdf";
    var isWord = Model.MimeType.Contains("word") || Model.MimeType.Contains("document");
    var isExcel = Model.MimeType.Contains("excel") || Model.MimeType.Contains("sheet");
    var canPreview = isImage || isPdf;
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i> Geri
    </a>
</div>

<div class="row g-4">
    <!-- Document Info -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Dosya Bilgileri</h5>
            </div>
            <div class="card-body">
                @{
                    var iconClass = Model.MimeType switch
                    {
                        var m when m.Contains("pdf") => "bi-file-earmark-pdf text-danger",
                        var m when m.Contains("word") || m.Contains("document") => "bi-file-earmark-word text-primary",
                        var m when m.Contains("excel") || m.Contains("sheet") => "bi-file-earmark-excel text-success",
                        var m when m.Contains("image") => "bi-file-earmark-image text-info",
                        _ => "bi-file-earmark text-secondary"
                    };
                    var sizeStr = Model.FileSize < 1024 ? $"{Model.FileSize} B" :
                                  Model.FileSize < 1048576 ? $"{Model.FileSize / 1024.0:F1} KB" :
                                  $"{Model.FileSize / 1048576.0:F1} MB";
                }
                
                <div class="text-center mb-4">
                    <i class="bi @iconClass" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">@Model.Name</h5>
                    <small class="text-muted">@Model.FileName</small>
                </div>

                <table class="table table-sm">
                    <tr>
                        <th class="text-muted">Boyut</th>
                        <td>@sizeStr</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Tür</th>
                        <td>@Model.MimeType</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Dava</th>
                        <td>@(Model.Matter?.Name ?? "-")</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Yüklenme</th>
                        <td>@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <tr>
                            <th class="text-muted">Açıklama</th>
                            <td>@Model.Description</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <tr>
                            <th class="text-muted">Etiketler</th>
                            <td>
                                @foreach (var tag in Model.Tags.Split(','))
                                {
                                    <span class="badge bg-light text-dark me-1">@tag.Trim()</span>
                                }
                            </td>
                        </tr>
                    }
                </table>

                <div class="d-grid gap-2 mt-4">
                    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-download me-1"></i> İndir
                    </a>
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editModal">
                        <i class="bi bi-pencil me-1"></i> Düzenle
                    </button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                          onsubmit="return confirm('Bu dosyayı silmek istediğinize emin misiniz?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash me-1"></i> Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Önizleme</h5>
                @if (isWord || isExcel)
                {
                    <a href="https://docs.google.com/gview?url=@(Context.Request.Scheme)://@(Context.Request.Host)@(Model.FilePath)&embedded=true" 
                       target="_blank" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-box-arrow-up-right me-1"></i> Google Docs'ta Aç
                    </a>
                }
            </div>
            <div class="card-body p-0" style="min-height: 600px;">
                @if (isImage)
                {
                    <div class="text-center p-3">
                        <img src="@Model.FilePath" alt="@Model.Name" class="img-fluid rounded" style="max-height: 580px;" />
                    </div>
                }
                else if (isPdf)
                {
                    <iframe src="@Model.FilePath" class="w-100" style="height: 600px; border: none;"></iframe>
                }
                else if (isWord || isExcel)
                {
                    <!-- Google Docs Viewer for Office files -->
                    <iframe src="https://docs.google.com/gview?url=@(Context.Request.Scheme)://@(Context.Request.Host)@(Model.FilePath)&embedded=true" 
                            class="w-100" style="height: 600px; border: none;"></iframe>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-file-earmark fs-1 text-muted"></i>
                        <p class="text-muted mt-3">Bu dosya türü için önizleme mevcut değil</p>
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-download me-1"></i> Dosyayı İndir
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dosya Bilgilerini Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Update" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Dosya Adı *</label>
                        <input type="text" name="name" class="form-control" value="@Model.Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="description" class="form-control" rows="3">@Model.Description</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Etiketler</label>
                        <input type="text" name="tags" class="form-control" value="@Model.Tags" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
